<resources>

    <style name="LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackgroundLight</item>
        <item name="divider">@color/dividerLight</item>
        <item name="thumbColor">@color/colorPrimaryLight</item>
        <item name="titleTextColor">@color/textPrimaryLight</item>
        <item name="itemIconTint">@color/textPrimaryLight</item>
        <item name="android:textColorPrimary">@color/textPrimaryLight</item>
        <item name="android:textColorSecondary">@color/textSecondaryLight</item>
        <item name="android:textColorTertiary">@color/textTertiaryLight</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="android:dropDownListViewStyle">@style/DropDownStyleLight</item>
        <item name="android:dialogTheme">@style/DialogLight</item>
        <item name="message_background">@drawable/message_bg_light</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="divider">@color/dividerDark</item>
        <item name="thumbColor">@color/dividerDark</item>
        <item name="titleTextColor">@color/textPrimaryDark</item>
        <item name="itemIconTint">@color/textPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textSecondaryDark</item>
        <item name="android:textColorTertiary">@color/textTertiaryDark</item>
        <item name="android:listDivider">@drawable/divider</item>
        <item name="android:dropDownListViewStyle">@style/DropDownStyleDark</item>
        <item name="android:dialogTheme">@style/DialogDark</item>
        <item name="message_background">@drawable/message_bg_dark</item>
        <item name="navigationViewStyle">@style/NavigationViewDark</item>
    </style>

    <style name="DialogDark" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="android:textColorPrimary">@color/textPrimaryDark</item>
        <item name="android:textColorSecondary">@color/textSecondaryDark</item>
        <item name="android:textColorTertiary">@color/textTertiaryDark</item>
    </style>

    <style name="DialogLight" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:progressBarStyle">@style/ProgressBar</item>
        <item name="android:background">@color/colorBackgroundLight</item>
        <item name="android:textColorPrimary">@color/textPrimaryLight</item>
        <item name="android:textColorSecondary">@color/textSecondaryLight</item>
        <item name="android:textColorTertiary">@color/textTertiaryLight</item>
    </style>

    <style name="ProgressBar" parent="android:Widget.Material.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">?colorPrimary</item>
    </style>

    <style name="DropDownStyleLight" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:divider">@color/colorBackgroundLight</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="DropDownStyleDark" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:divider">@color/textSecondaryDark</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="NavigationViewDark" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/colorBackgroundDark</item>
    </style>

    <style name="ShadowText">
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>
